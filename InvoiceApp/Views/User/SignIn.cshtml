@using InvoiceApp.ViewModels.User;
@model SignInViewModel;

@{
    ViewData["Title"] = "Sign in";
}

<div class="container">
    <div class="row"></div>
        <form
            asp-controller="User"
            asp-action="SignIn" method="post"
            class="col-12 col-lg-6 offset-lg-3 card d-grid gap-3 px-4 py-2"
        >
            <input type="hidden" name="returnUrl" value="@ViewData["returnUrl"]"/>

	        <div class="row form-group gy-1">
                <label asp-for="@Model.Email" class="col-12">Email:</label>
		        <input asp-for="@Model.Email" type="email" value="@Model.Email" class="form-control" />
                <span asp-validation-for="@Model.Email" class="col-12 text-danger"></span>
            </div>

            <div class="row form-group gy-1">
                <label asp-for="@Model.Password" class="col-12">Password:</label>
                <input asp-for="@Model.Password" type="password" value="@Model.Password" class="form-control" />
                <span asp-validation-for="@Model.Password" class="col-12 text-danger"></span>
            </div>

            <div asp-validation-summary="All" class="row text-danger px-1 m-0 "> </div>

            <div class="d-flex justify-content-center">
		        <input type="submit" value="Sign In" class="btn btn-primary"/>
	        </div>
        </form>
    <div>
</div>